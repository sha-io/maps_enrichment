{
  "version": 2,
  "builds": [
    {
      "src": "/api/main.py",
      "use": "@vercel/python",
      "config": {
        "includeFiles": "api/**"
      }
    },
    {
      "src": "/web/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "web/$1"
    }
  ]
}